[colors]
background = ${xrdb:color8}
background-alt = #444
foreground = ${xrdb:color15}
foreground-alt = #555
primary = ${xrdb:color4}
secondary = ${xrdb:color6}
alert = #bd2c40
col = #00f

[bar/example]
monitor = ${env:MONITOR:LVDS-1}
width = 100%
height = 3%
offset-x = 0
offset-y = 0
radius = 2.0
fixed-center = true

background = ${xrdb:color0}
foreground = ${colors.foreground}

line-size = 3
line-color = ${xrdb:color0}

border-size = 0
border-color = ${xrdb:color15}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = inconsolata:pixelsize=12;1
font-1 = fontawesome:size=11:antialias=false;0
font-2= Arial:pixelsize=11;1

modules-left = sep i3 sep sep cpu memory filesystem temperature  
modules-center = date
modules-right =  wlan battery sep volume 

tray-position = right
tray-padding = 0

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${xrdb:color2}
label-focused-underline = ${xrdb:color15}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-background = ${xrdb:color8}
label-unfocused-underline  = ${xrdb:color8}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${xrdb:color0}
label-visible-underline = ${xrdb:color0}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${xrdb:color9}
label-urgent-padding = 2

[module/cpu]
type = internal/cpu
interval = 2

format-prefix = " C:"
format-prefix-foreground = ${xrdb:color15}
format-prefix-background = ${xrdb:color4}

label = "%percentage%% "
label-foreground = ${xrdb:color15}
label-background = ${xrdb:color4}


[module/memory]
type = internal/memory
interval = 2
format-prefix = " M:"
label = "%percentage_used%% "
format-prefix-foreground = ${xrdb:color15}
label-foreground = ${xrdb:color15}
format-prefix-background = ${xrdb:color2}
label-background = ${xrdb:color2}


[module/filesystem]
type = internal/fs
interval = 30
mount-0 = /
label-mounted = "%{F#a0a} %mountpoint%:%{F#000}%percentage_used%% "
label-mounted-background = ${xrdb:color6}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = "<label>"
format-warn = !!!!!!!!!!!!!! CPU : <label-warn> !!!!!!!!!!!!!
format-warn-background = ${xrdb:color4} 
format-warn-underline = ${xrdb:color2}

label = " %temperature% " 
label-background = ${xrdb:color5} 
label-warn = %temperature%
label-warn-foreground = ${xrdb:color15} 

[module/eth]
type = internal/network
interface = enp0s25
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected = "---"
/;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}


[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <label-connected>
format-connected-foreground = ${xrdb:color15} 
format-connected-background = ${xrdb:color0} 
format-connected-underline = ${xrdb:color9}
label-connected = " %essid% %{F#5f5}↓:%downspeed% %{F#ff5}↑:%upspeed% "

format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}



[module/sep]
type = custom/text
content = "  "

[module/date]
type = internal/date
interval = 1

date = "%d/%b/%a"
;date-alt = " %Y-%m-%d"

time = "%I:%M:%S"
time-alt = "%I:%M:%S"

format-foreground = ${xrdb:color0} 
format-background = ${xrdb:color9}
format-underline = ${xrdb:color4}
label = "  %time% |  %date%  "

[module/volume]
type = internal/volume

format-volume = " <bar-volume> "
bar-volume-width = 10
bar-volume-foreground-0 = ${xrdb:color10}
bar-volume-foreground-1 = ${xrdb:color10}
bar-volume-foreground-2 = ${xrdb:color10}
bar-volume-foreground-3 = ${xrdb:color10}
bar-volume-foreground-4 = ${xrdb:color10}
bar-volume-foreground-5 = ${xrdb:color11}
bar-volume-foreground-6 = ${xrdb:color9}
bar-volume-gradient = true
bar-volume-indicator = 
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98
	
format-charging = "⏵  <label-charging>% <animation-charging>  ⏵"
format-charging-underline = ${xrdb:color4}
format-charging-foreground = ${xrdb:color0}
format-charging-background = ${xrdb:color12}
label-charging = %percentage%

format-discharging = "!!!! <label-discharging>left !!!!"
format-discharging-underline = ${xrdb:color9}
format-discharging-foreground = ${xrdb:color15}
format-discharging-background = ${xrdb:color9}
label-discharging = " %percentage%% "

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 400


[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5